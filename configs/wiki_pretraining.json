{
  "model": {
    "type": "transformer",
    "d_model": 128,
    "num_heads": 4,
    "num_layers": 2,
    "d_ff": 1024,
    "vocab_size": 16000
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "Laptop-optimized pretraining on Wikipedia - Conservative settings for 8GB RAM + i5-1135G7"
  },
  "training": {
    "learning_rate": 0.0001,
    "max_length": 128,
    "batch_size": 20,
    "prefetch_batches": 1,
    "num_workers": 1,
    "shuffle": false,
    "random_offset": true,
    "num_epochs": 20,
    "random_seed": 42,
    "max_batches_per_epoch": 100
  },
  "data": {
    "input_file": "data/pretraining/wiki/wiki_corpus.txt",
    "output_dir": "outputs/wiki_pretrained",
    "tokenizer_vocab": "outputs/tokenizer_wiki.vocab",
    "max_files": 0,
    "file_pattern": "**/*",
    "shuffle": false,
    "random_offset": true,
    "validation_split": 0.05
  },
  "generation": {
    "max_length": 200,
    "temperature": 0.7,
    "top_p": 0.9,
    "top_k": 40
  },
  "profiling": {
    "enabled": true,
    "report_top_n": 20
  },
  "checkpointing": {
    "save_every_n_batches": 500,
    "keep_last_n": 3,
    "save_path": "outputs/wiki_pretrained/checkpoints"
  }
}
