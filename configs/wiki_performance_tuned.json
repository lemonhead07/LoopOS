{
  "model": {
    "type": "transformer",
    "d_model": 320,
    "num_heads": 8,
    "num_layers": 5,
    "d_ff": 1280,
    "vocab_size": 16000
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "Performance-tuned - Maximizes throughput with cache-friendly dimensions"
  },
  "training": {
    "learning_rate": 0.0001,
    "max_length": 96,
    "batch_size": 40,
    "num_epochs": 1,
    "random_seed": 42
  },
  "data": {
    "input_file": "data/pretraining/wiki/fullEnglish/",
    "output_dir": "outputs/wiki_performance_tuned",
    "tokenizer_vocab": "outputs/tokenizer_wiki.vocab",
    "max_files": 100,
    "file_pattern": "**/*",
    "shuffle": true,
    "validation_split": 0.05
  },
  "generation": {
    "max_length": 200,
    "temperature": 0.7,
    "top_p": 0.9,
    "top_k": 40
  },
  "profiling": {
    "enabled": true,
    "report_top_n": 20
  },
  "checkpointing": {
    "save_every_n_batches": 100,
    "keep_last_n": 3,
    "save_path": "outputs/wiki_performance_tuned/checkpoints"
  }
}
