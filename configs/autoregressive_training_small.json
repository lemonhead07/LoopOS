{
  "model": {
    "type": "transformer",
    "d_model": 256,
    "num_heads": 8,
    "num_layers": 2,
    "d_ff": 1024
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "GPT-style autoregressive language modeling with adaptive LR (small/fast test)"
  },
  "training": {
    "adaptive_lr": {
      "enabled": true,
      "strategy": "cosine_annealing_warm_restarts",
      "initial_lr": 0.001,
      "min_lr": 1e-6,
      "T_0": 3,
      "T_mult": 1.5
    },
    "max_length": 128,
    "num_epochs": 20,
    "regularization": {
      "dropout": 0.1,
      "weight_decay": 0.01
    }
  },
  "data": {
    "input_file": "data/pretraining/text/trump_3.6.txt",
    "output_dir": "outputs/autoregressive"
  }
}

