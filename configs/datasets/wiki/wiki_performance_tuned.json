{
  "model": {
    "type": "transformer",
    "d_model": 320,
    "num_heads": 8,
    "num_layers": 5,
    "d_ff": 1280,
    "vocab_size": 16000
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "Performance-tuned - Sequential reading with cache-friendly dimensions"
  },
  "training": {
    "learning_rate": 0.0001,
    "max_length": 96,
    "batch_size": 20,
    "max_tokens": 20000000,
    "num_epochs": 1,
    "shuffle": false
  },
  "data": {
    "input_file": "data/pretraining/wiki/wiki_corpus.txt",
    "output_dir": "outputs/wiki_performance_tuned",
    "tokenizer_vocab": "outputs/tokenizer_wiki.vocab"
  },
  "checkpointing": {
    "save_every_n_batches": 300,
    "keep_last_n": 3,
    "save_path": "outputs/wiki_performance_tuned/checkpoints"
  }
}
