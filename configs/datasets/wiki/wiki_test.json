{
  "model": {
    "type": "transformer",
    "d_model": 128,
    "num_heads": 4,
    "num_layers": 2,
    "d_ff": 512,
    "vocab_size": 16000
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "Small test config - Sequential reading for quick validation"
  },
  "training": {
    "learning_rate": 0.0003,
    "batch_size": 8,
    "max_length": 64,
    "max_tokens": 100000,
    "num_epochs": 1,
    "shuffle": false
  },
  "data": {
    "input_file": "data/pretraining/wiki/wiki_corpus.txt",
    "output_dir": "outputs/wiki_test",
    "tokenizer_vocab": "outputs/tokenizer_wiki.vocab"
  },
  "checkpointing": {
    "save_every_n_batches": 50,
    "keep_last_n": 2,
    "save_path": "outputs/wiki_test/checkpoints"
  }
}
