{
  "model": {
    "type": "transformer",
    "d_model": 384,
    "num_heads": 8,
    "num_layers": 4,
    "d_ff": 1536,
    "vocab_size": 16000
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "Cache-optimized - Sequential reading for L2/L3 cache efficiency"
  },
  "training": {
    "learning_rate": 0.0001,
    "max_length": 128,
    "batch_size": 24,
    "max_tokens": 10000000,
    "num_epochs": 1,
    "shuffle": false
  },
  "data": {
    "input_file": "data/pretraining/wiki/wiki_corpus.txt",
    "output_dir": "outputs/wiki_cache_optimized",
    "tokenizer_vocab": "outputs/tokenizer_wiki.vocab"
  },
  "checkpointing": {
    "save_every_n_batches": 500,
    "keep_last_n": 3,
    "save_path": "outputs/wiki_cache_optimized/checkpoints"
  }
}
