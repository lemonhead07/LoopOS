{
  "model": {
    "type": "transformer",
    "d_model": 256,
    "num_heads": 8,
    "num_layers": 2,
    "d_ff": 1024
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "Tiny Trump dataset - Sequential reading (100 lines)"
  },
  "training": {
    "learning_rate": 0.0001,
    "batch_size": 8,
    "max_length": 128,
    "max_tokens": 50000,
    "num_epochs": 1,
    "shuffle": false
  },
  "data": {
    "input_file": "data/pretraining/text/trump_tiny.txt",
    "output_dir": "outputs/trump_tiny"
  },
  "checkpointing": {
    "save_every_n_batches": 50,
    "keep_last_n": 2,
    "save_path": "outputs/trump_tiny/checkpoints"
  }
}
