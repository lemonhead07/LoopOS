{
  "model": {
    "type": "transformer",
    "d_model": 256,
    "num_heads": 8,
    "num_layers": 2,
    "d_ff": 1024
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "Quarter Trump dataset - Sequential reading (25%)"
  },
  "training": {
    "learning_rate": 0.0001,
    "max_length": 128,
    "batch_size": 16,
    "max_tokens": 200000,
    "num_epochs": 1,
    "shuffle": false
  },
  "data": {
    "input_file": "data/pretraining/text/trump_3.6.quarter.txt",
    "output_dir": "outputs/trump_quarter"
  },
  "checkpointing": {
    "save_every_n_batches": 100,
    "keep_last_n": 2,
    "save_path": "outputs/trump_quarter/checkpoints"
  }
}
