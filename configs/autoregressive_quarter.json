{
  "model": {
    "type": "transformer",
    "d_model": 256,
    "num_heads": 8,
    "num_layers": 2,
    "d_ff": 1024
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "GPT-style autoregressive - quartered Trump dataset (25%)"
  },
  "training": {
    "learning_rate": 0.0001,
    "max_length": 128,
    "batch_size": 20,
    "prefetch_batches": 2,
    "num_workers": 2,
    "shuffle": true,
    "num_epochs": 1
  },
  "data": {
    "input_file": "data/pretraining/text/trump_3.6.quarter.txt",
    "output_dir": "outputs/autoregressive"
  }
}
