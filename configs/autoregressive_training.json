{
  "model": {
    "type": "transformer",
    "d_model": 384,
    "num_heads": 8,
    "num_layers": 4,
    "d_ff": 1536
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "GPT-style autoregressive language modeling with adaptive learning rate"
  },
  "training": {
    "adaptive_lr": {
      "enabled": true,
      "strategy": "cosine_annealing_warm_restarts",
      "initial_lr": 0.001,
      "min_lr": 1e-6,
      "T_0": 5,
      "T_mult": 2.0
    },
    "max_length": 96,
    "batch_size": 8,
    "prefetch_batches": 3,
    "num_workers": 2,
    "shuffle": true,
    "num_epochs": 50,
    "regularization": {
      "dropout": 0.1,
      "weight_decay": 0.01
    }
  },
  "data": {
    "input_file": "data/pretraining/text/trump_3.6.txt",
    "output_dir": "outputs/autoregressive"
  }
}

