{
  "model": {
    "type": "transformer",
    "d_model": 256,
    "num_heads": 4,
    "num_layers": 2,
    "d_ff": 1024,
    "vocab_size": 16000
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive"
  },
  "training": {
    "learning_rate": 0.0001,
    "max_length": 128,
    "batch_size": 8,
    "prefetch_batches": 2,
    "num_workers": 2,
    "shuffle": true,
    "num_epochs": 1
  },
  "data": {
    "input_file": "/tmp/wiki_test_corpus.txt",
    "tokenizer_vocab": "outputs/tokenizer_wiki.vocab"
  }
}
