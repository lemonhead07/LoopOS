{
  "model": {
    "type": "transformer",
    "d_model": 256,
    "num_heads": 8,
    "num_layers": 2,
    "d_ff": 1024,
    "vocab_size": 1000
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "GPT-style autoregressive with random offset - fast for large files"
  },
  "training": {
    "learning_rate": 0.0001,
    "batch_size": 20,
    "num_epochs": 5,
    "max_length": 128,
    "shuffle": false,
    "random_offset": true,
    "max_batches_per_epoch": 100
  },
  "data": {
    "input_file": "data/pretraining/text/trump_3.6.quarter.txt",
    "output_dir": "outputs/autoregressive_random"
  },
  "generation": {
    "max_length": 50,
    "temperature": 0.8
  },
  "profiling": {
    "enabled": false,
    "report_top_n": 10
  }
}
