{
  "model": {
    "type": "transformer",
    "d_model": 512,
    "num_heads": 8,
    "num_layers": 6,
    "d_ff": 2048,
    "vocab_size": 16000
  },
  "computation": {
    "mode": "pretraining",
    "method": "autoregressive",
    "description": "GPU-optimized config - Larger model and batch for maximum GPU utilization"
  },
  "training": {
    "learning_rate": 0.0001,
    "max_length": 128,
    "batch_size": 32,
    "prefetch_batches": 2,
    "num_workers": 2,
    "shuffle": false,
    "random_offset": true,
    "num_epochs": 1,
    "random_seed": 42
  },
  "data": {
    "input_file": "data/pretraining/wiki/wiki_gpu_corpus.txt",
    "output_dir": "outputs/wiki_gpu_optimized",
    "tokenizer_vocab": "outputs/tokenizer_wiki.vocab",
    "max_files": 100,
    "file_pattern": "**/*",
    "shuffle": true,
    "validation_split": 0.05
  },
  "generation": {
    "max_length": 200,
    "temperature": 0.7,
    "top_p": 0.9,
    "top_k": 40
  },
  "profiling": {
    "enabled": true,
    "report_top_n": 20
  },
  "checkpointing": {
    "save_every_n_batches": 100,
    "keep_last_n": 3,
    "save_path": "outputs/wiki_gpu_optimized/checkpoints"
  }
}
