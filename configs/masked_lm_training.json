{
  "model": {
    "type": "transformer",
    "d_model": 384,
    "num_heads": 8,
    "num_layers": 4,
    "d_ff": 1536,
    "vocab_size": 16000
  },
  "computation": {
    "mode": "pretraining",
    "method": "masked_lm",
    "description": "BERT-style masked language modeling (optimized for i5-1135G7)"
  },
  "training": {
    "learning_rate": 0.0001,
    "mask_probability": 0.15,
    "batch_size": 20,
    "prefetch_batches": 3,
    "num_workers": 2,
    "shuffle": true,
    "num_epochs": 20
  },
  "data": {
    "input_file": "data/pretraining/sample.txt",
    "output_dir": "outputs/masked_lm"
  }
}
